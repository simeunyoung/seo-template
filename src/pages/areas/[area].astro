---
import BaseLayout from "../../layouts/BaseLayout.astro";
import areas from "../../data/areas.json";

const SITE = "https://seo-template-eta.vercel.app"; // 테스트 중

export async function getStaticPaths() {
  return areas.map((a) => ({
    params: { area: a.slug },
    props: { area: a },
  }));
}

const { area } = Astro.props;
---

<BaseLayout
  title={area.title}
  description={area.description}
  canonical={`${SITE}/areas/${area.slug}`}
>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-content">
          <h1>{area.name} 키워드 랜딩</h1>
          <p>{area.description}</p>

          <section>
            <h2>FAQ</h2>
            <details><summary>질문 1</summary><p>{area.name} 답변</p></details>
            <details><summary>질문 2</summary><p>{area.name} 답변</p></details>
            <details><summary>질문 3</summary><p>{area.name} 답변</p></details>
            <details><summary>질문 4</summary><p>{area.name} 답변</p></details>
            <details><summary>질문 5</summary><p>{area.name} 답변</p></details>
          </section>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
